{% doc %}
  @prompt
    generate a section shows sales ends in 2 days
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sale-countdown-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-sale-countdown-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-sale-countdown-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.spacing }}px;
    font-weight: 600;
  }

  .ai-sale-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.text_alignment }};
    gap: {{ block.settings.timer_gap }}px;
    flex-wrap: wrap;
  }

  .ai-sale-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: {{ block.settings.unit_width }}px;
  }

  .ai-sale-countdown-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: 700;
    color: {{ block.settings.number_color }};
    line-height: 1;
    padding: {{ block.settings.box_padding }}px;
    background-color: {{ block.settings.box_background }};
    border-radius: {{ block.settings.box_radius }}px;
    min-width: {{ block.settings.unit_width }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-sale-countdown-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    margin-top: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-sale-countdown-message-{{ ai_gen_id }} {
    margin-top: {{ block.settings.spacing }}px;
    font-size: {{ block.settings.message_size }}px;
    color: {{ block.settings.message_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-sale-countdown-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-sale-countdown-value-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.number_size }}px * 0.8);
      min-width: calc({{ block.settings.unit_width }}px * 0.8);
    }

    .ai-sale-countdown-unit-{{ ai_gen_id }} {
      min-width: calc({{ block.settings.unit_width }}px * 0.8);
    }

    .ai-sale-countdown-label-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.label_size }}px * 0.9);
    }
  }
{% endstyle %}

<sale-countdown-{{ ai_gen_id }}
  class="ai-sale-countdown-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-sale-countdown-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-sale-countdown-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-sale-countdown-timer-{{ ai_gen_id }}">
      {% if block.settings.show_days %}
        <div class="ai-sale-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-sale-countdown-value-{{ ai_gen_id }}" data-unit="days">00</div>
          <div class="ai-sale-countdown-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_hours %}
        <div class="ai-sale-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-sale-countdown-value-{{ ai_gen_id }}" data-unit="hours">00</div>
          <div class="ai-sale-countdown-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_minutes %}
        <div class="ai-sale-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-sale-countdown-value-{{ ai_gen_id }}" data-unit="minutes">00</div>
          <div class="ai-sale-countdown-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.show_seconds %}
        <div class="ai-sale-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-sale-countdown-value-{{ ai_gen_id }}" data-unit="seconds">00</div>
          <div class="ai-sale-countdown-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.message != blank %}
      <div class="ai-sale-countdown-message-{{ ai_gen_id }}">{{ block.settings.message }}</div>
    {% endif %}
  </div>
</sale-countdown-{{ ai_gen_id }}>

<script>
  (function() {
    class SaleCountdown{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.timerInterval = null;
      }

      connectedCallback() {
        this.startCountdown();
      }

      disconnectedCallback() {
        if (this.timerInterval) {
          clearInterval(this.timerInterval);
        }
      }

      startCountdown() {
        if (!this.endDate) {
          return;
        }

        const endDateTime = this.endTime 
          ? new Date(this.endDate + 'T' + this.endTime)
          : new Date(this.endDate + 'T23:59:59');

        this.updateTimer(endDateTime);
        
        this.timerInterval = setInterval(() => {
          this.updateTimer(endDateTime);
        }, 1000);
      }

      updateTimer(endDateTime) {
        const now = new Date().getTime();
        const distance = endDateTime.getTime() - now;

        if (distance < 0) {
          if (this.timerInterval) {
            clearInterval(this.timerInterval);
          }
          this.setTimerValues(0, 0, 0, 0);
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        this.setTimerValues(days, hours, minutes, seconds);
      }

      setTimerValues(days, hours, minutes, seconds) {
        const daysEl = this.querySelector('[data-unit="days"]');
        const hoursEl = this.querySelector('[data-unit="hours"]');
        const minutesEl = this.querySelector('[data-unit="minutes"]');
        const secondsEl = this.querySelector('[data-unit="seconds"]');

        if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
        if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
        if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
        if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
      }
    }

    customElements.define('sale-countdown-{{ ai_gen_id }}', SaleCountdown{{ ai_gen_id }});
  })();
</script>

